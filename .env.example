# Rally REST Toolkit Environment Configuration
# Copy this file to .env and fill in your values

# Required: Your Rally API key for authentication
RALLY_API_KEY=your_api_key_here

# Optional: Rally API base URL (defaults to https://rally1.rallydev.com/slm/webservice/v2.0)
# RALLY_BASE_URL=https://rally1.rallydev.com/slm/webservice/v2.0

# Optional: HTTP timeout in seconds (defaults to 30)
# RALLY_TIMEOUT=30

# Optional: Maximum retry attempts for transient failures (defaults to 3)
# RALLY_MAX_RETRIES=3

# Optional: Initial retry delay in milliseconds (defaults to 1000)
# RALLY_RETRY_DELAY=1000
